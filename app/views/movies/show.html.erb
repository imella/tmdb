<%= cache @movie do %>
  <div class="row">
    <div class="col-md-3">
      <%= image_tag @movie.image_path %>
    </div>
    <div class="col-md-9">
      <div class="row">
        <div class="col-md-12">
          <h1><%= @movie.name %> (<%= @movie.year %>)</h1>
        </div>
      </div>
      <div class="row">
        <div class="col-md-12">
          <p><%= @movie.description %></p>
        </div>
      </div>
      <div class="row">
        <div class="col-md-12">
          <h3>Cast</h3>
          <ul>
            <% @movie.actors.each do |actor| %>
              <li><%= link_to actor.name, actor %></li>
            <% end %>
          </ul>
        </div>
      </div>
    </div>
  </div>
<% end %>